{
  "manifest_version": 3,
  "name": "Wordle Sync",
  "permissions": ["storage", "tabs", "alarms"],
  "background": {
    "service_worker": "build/background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.powerlanguage.co.uk/wordle/"],
      "all_frames" : true,
      "exclude_matches": [ ],
      "run_at": "document_start",
      "js": ["build/injection.js"]
    }
  ],
  "icons": { 
    "16": "wordle16.png",
    "48": "wordle48.png",
   "128": "wordle128.png" },
   "version": "1.0"
}
